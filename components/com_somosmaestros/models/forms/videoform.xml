<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

              <field name="id" type="text" default="0" label="COM_SOMOSMAESTROS_FORM_LBL_VIDEO_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 

       <field name="created_by" type="createdby" default="" 
            label="COM_SOMOSMAESTROS_FORM_LBL_VIDEO_CREATED_BY"
            description="COM_SOMOSMAESTROS_FORM_DESC_VIDEO_CREATED_BY"  /> 

       <field name="url" type="text"
                
            label="COM_SOMOSMAESTROS_FORM_LBL_VIDEO_URL"
            description="COM_SOMOSMAESTROS_FORM_DESC_VIDEO_URL" 
                
                
                 required="true"  /> 

       <field name="imagen" type="media"
                
            label="COM_SOMOSMAESTROS_FORM_LBL_VIDEO_IMAGEN"
            description="COM_SOMOSMAESTROS_FORM_DESC_VIDEO_IMAGEN" 
                
                
                 required="true" 
            directory="/images/articulos" /> 

       <field name="titulo" type="text"
                
            label="COM_SOMOSMAESTROS_FORM_LBL_VIDEO_TITULO"
            description="COM_SOMOSMAESTROS_FORM_DESC_VIDEO_TITULO" 
                
                
                 required="true"  /> 

         <field
        name="state"
        type="list"
        label="JSTATUS"
        description="JFIELD_PUBLISHED_DESC"
        class="inputbox"
        size="1"
        default="1">
        <option value="1">JPUBLISHED</option>
        <option value="0">JUNPUBLISHED</option>
        <option value="2">JARCHIVED</option>
        <option value="-2">JTRASHED</option>
    </field> 

                        <field name="checked_out" type="hidden" filter="unset" />
        <field name="checked_out_time" type="hidden" filter="unset" />

	</fieldset>

</form>
